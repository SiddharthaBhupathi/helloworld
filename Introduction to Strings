/*Displaying a string*/
string name = "siddhu";
Console.WriteLine($"My name is {name}");

/*length of a string*/
string name = siddhu;
Console.WriteLine($"My name is {name}. It has {name.Length} letters");

/*Trimming spaces in a sentence*/
string greeting ="   hello world!   ";
Console.WriteLine($"[greeting]");
string trimmedgreeting = greeting.TrimStart();
Console.WriteLine($"[trimmedgreeting]");
trimmedgreeting = greeting.TrimEnd();
Console.WriteLine($"[trimmedgreeting]");
trimmedgreeting = greeting.Trim();
Console.WriteLine($"[trimmedgreeting]");

/*searching a string*/
string songlyrics = "They hate the way you shine";
Console.WriteLine($"songlyrics.Contains("shine"));
Console.WriteLine($"sonlyrics.Contains("welcome"));

string songlyrics = "They hate the way you shine";
Console.WriteLine($"songlyrics.StartsWith("They"));
Console.WriteLine($"songlyrics.EndsWith("you"));

/*Changing to uppercase and lowercase letters*/
string greetings = "welcome";
Console.WriteLine($"greetings.ToUpper());
Console.WriteLine($"greetings.ToLower());



